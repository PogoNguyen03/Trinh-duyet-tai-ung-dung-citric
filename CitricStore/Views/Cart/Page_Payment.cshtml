@model CitricStore.Models.ORDER_INFO

@{
    ViewBag.Title = "Page_Payment";
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<style>
    .register-btn {
        width: 46%;
        margin-left: 10px;
    }
</style>

<div class="container col-lg-5 col-md-11" style="margin:0px auto;">
    <h2 style="text-align: center; color:white">THÔNG TIN NHẬN HÀNG VÀ THANH TOÁN</h2>
    <div style="color:white; font-size:18px;">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Tên Nhận Hàng:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenOrder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số Điện Thoại:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SDTOrder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDTOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Email Nhận Hàng:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailOrder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailOrder, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Ngân Hàng Thanh Toán:
                <div class="col-md-10">
                    @Html.DropDownList("MaNganHang", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNganHang, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Mã Tài Khoản:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaTaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Tên Chủ Tài Khoản:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xác nhận thanh toán" class="btn btn-dark" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Giỏ Hàng", "GetCartInfo")
        </div>
        </div>
</div>