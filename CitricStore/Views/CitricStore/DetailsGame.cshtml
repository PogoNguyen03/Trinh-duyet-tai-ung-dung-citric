@using CitricStore.Models
@{
    ViewBag.Title = @Model.TenGame;
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/AppPage.css" />
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div class="slideshow">
    <div class="display-container">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/nền ứng dụng 1.jpg">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/ứng dụng 1.1.jpg">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/ứng dụng 1.2.jpg">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/ứng dụng 1.3.jpg">
        <!--Nút qua lại-->
        <button class="image-button button-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="image-button button-right" onclick="plusDivs(1)">&#10095;</button>

        <!-- Chấm tròn -->
        <div class="badge" style="width:100%">
            <span class="image-badge" onclick="currentDiv(1)"></span>
            <span class="image-badge" onclick="currentDiv(2)"></span>
            <span class="image-badge" onclick="currentDiv(3)"></span>
            <span class="image-badge" onclick="currentDiv(4)"></span>
        </div>
    </div>
</div>
<script language="Javascript" src="~/Scripts/SlideImageAuto.js"></script>

<div class="col-12">
    <div class="row">
        <div class="col-lg-8 col-md-8 tenungdung">
            @Model.TenGame
        </div>
        <div class="col-lg-4 col-md-4">
            <div class="col-lg-6">
                <a type="submit" class="nuttaigame float-end" style="text-align:center" href="@Model.LinkTai">
                    Download
                </a>
            </div>
            <div class="row justify-content-center">
                <div class="danhgia">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                </div>
            </div>
        </div>
        <div class="tieudenoidung">
            <p class="tieude">NỘI DUNG</p>
            <p class="noidung">
                @Model.GioiThieu
            </p>
        </div>
        <hr>
        <div class="tieudechitiet">
            <p class="tieude">CHI TIẾT</p>
            <p class="chitiet">Thể loại: @Html.Action("TenTheLoai_Bloggame", "CitricStore")</p>
            <p class="chitiet">Dung lượng: @Model.DungLuong</p>
            <p class="chitiet">Ngôn ngữ: @Model.MaNgonNgu</p>
            <p class="chitiet">Hệ điều hành: @Model.MaHDH</p>
        </div>
        <hr>
        <div class="row ungdungkhac">
            <div class="game-list-container">
                <h1 class="game-list-title">TRÒ CHƠI MỚI</h1>
                <div class="game-list-wrapper">
                    <div class="game-list" id="game-list-scrollbar">
                        @Html.Action("GameMoi_Details", "CitricStore")
                    </div>
                </div>
            </div>
            <div class="ungdungkhac">
                <div class="game-list-container">
                    <h1 class="game-list-title">TRÒ CHƠI HOT</h1>
                    <div class="game-list-wrapper">
                        <div class="game-list" id="game-list-scrollbar">
                            @Html.Action("GameTheoDanhGia_Details", "CitricStore")
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
        

