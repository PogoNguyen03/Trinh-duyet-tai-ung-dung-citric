@using CitricStore.Models
@{
    ViewBag.Title = @Model.TenGame;
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/AppPage.css" />
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div class="slideshow">
    <div class="display-container">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/nền ứng dụng 1.jpg">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/ứng dụng 1.1.jpg">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/ứng dụng 1.2.jpg">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/ứng dụng 1.3.jpg">
        <!--Nút qua lại-->
        <button class="image-button button-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="image-button button-right" onclick="plusDivs(1)">&#10095;</button>

        <!-- Chấm tròn -->
        <div class="badge" style="width:100%">
            <span class="image-badge" onclick="currentDiv(1)"></span>
            <span class="image-badge" onclick="currentDiv(2)"></span>
            <span class="image-badge" onclick="currentDiv(3)"></span>
            <span class="image-badge" onclick="currentDiv(4)"></span>
        </div>
    </div>
</div>
<script language="Javascript" src="~/Scripts/SlideImageAuto.js"></script>

<div class="col-12">
    <div class="row">
        <div class="col-lg-8 col-md-8 tenungdung" style=" padding-bottom:25px; padding-top:10px">
            @Model.TenGame
        </div>
        <div class="col-lg-4 col-md-4" style="padding-top:10px;">
                <a type="submit" class="nuttaigame float-end justify-content-center" style="text-align:center; align-items:center" href="@Model.LinkTai">
                    Download
                </a>
            <div class="row justify-content-center">
                <div class="danhgia">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                </div>
            </div>
        </div>
        <hr />
        <div class="tieudenoidung">
            <p class="tieude">NỘI DUNG</p>
            <p class="noidung">
                @Model.GioiThieu
            </p>
        </div>
        <hr>
        <div class="tieudechitiet">

            <p class="tieude">CHI TIẾT</p>
            <p class="chitiet">Thể loại: @Html.Action("TenTheLoai_Bloggame", "CitricStore", new { idtheloai = Model.MaTheLoai })</p>
            <p class="chitiet">Nhà phát hành: @Html.Action("TenNPH_Details","CitricStore", new {idnph = Model.MaNPH })</p>

            <p class="chitiet">Dung lượng: @Model.DungLuong MB</p>
            <p class="chitiet">Ngôn ngữ: @Html.Action("TenNgonNgu_Details","CitricStore", new {idngonngu = Model.MaNgonNgu })</p>
            <p class="chitiet">Hệ điều hành: @Html.Action("Details_TenHDH","CitricStore", new {idhdh = Model.MaHDH })</p>
            <p class="chitiet">Ngày cập nhật: @Model.NgayCapNhat</p>
        </div>
        <hr>
            <div class="game-list-container">
                <h1 class="game-list-title" style="margin-bottom: -20px;">TRÒ CHƠI CÙNG THỂ LOẠI</h1>
                <div class="game-list-wrapper">
                    <div class="game-list" id="game-list-scrollbar">
                        @Html.Action("GameCungTheLoai_Details", "CitricStore", new { idtheloai = Model.MaTheLoai })
                    </div>
                </div>
            </div>
            <div class="game-list-container">
                <h1 class="game-list-title" style="margin-bottom: -20px;">TRÒ CHƠI MỚI</h1>
                <div class="game-list-wrapper">
                    <div class="game-list" id="game-list-scrollbar">
                        @Html.Action("GameMoi_Details", "CitricStore")
                    </div>
                </div>
            </div>
            <div class="game-list-container">
                <h1 class="game-list-title" style="margin-bottom: -20px;">TRÒ CHƠI HOT</h1>
                <div class="game-list-wrapper">
                    <div class="game-list" id="game-list-scrollbar">
                        @Html.Action("GameTheoDanhGia_Details", "CitricStore")
                    </div>
                </div>
            </div>
    </div>
</div>
        

