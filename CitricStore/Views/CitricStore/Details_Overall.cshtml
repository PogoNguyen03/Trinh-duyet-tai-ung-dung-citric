@using CitricStore.Models
@{
    ViewBag.Title = "Details_Overall";
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}


<link rel="stylesheet" href="~/Content/AppPage.css" />
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/Content/Rating,js.js"></script>
<script>
    $(function () {
        $('.stars').stars();
    });
</script>


<div class="slideshow">
    <div class="display-container">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/APP/@Model.HinhNen">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/APP/@Model.HinhCT1">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/APP/@Model.HinhCT2">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/APP/@Model.HinhCT3">
        <img class="slides animate-fading" onclick="changeImage()" src="~/Images/APP/@Model.HinhCT4">
        <!--Nút qua lại-->
        <button class="image-button button-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="image-button button-right" onclick="plusDivs(1)">&#10095;</button>

        <!-- Chấm tròn -->
        <div class="badge" style="width:100%">
            <span class="image-badge" onclick="currentDiv(1)"></span>
            <span class="image-badge" onclick="currentDiv(2)"></span>
            <span class="image-badge" onclick="currentDiv(3)"></span>
            <span class="image-badge" onclick="currentDiv(4)"></span>
            <span class="image-badge" onclick="currentDiv(5)"></span>
        </div>
    </div>
</div>
<script language="Javascript" src="~/Scripts/SlideImageAuto.js"></script>

<div class="col-12">
    <div class="row">
        <div class="col-lg-8 col-md-8 tenungdung" style=" padding-bottom:25px; padding-top:10px">
            @Model.Ten
        </div>
        <div class="col-lg-4 col-md-4" style="padding-top:10px;">
            <a class="nuttaigame float-end justify-content-center" style="text-align:center; align-items:center"
               href="@Url.Action("AddToCart","Cart", new {id = Model.Ma})">
                Thêm vào giỏ hàng
            </a>

        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4"></div>
            <div class="col-lg-4 danhgia">
                <span class="stars" data-rating="@Model.DanhGia" data-num-stars="5"></span>
            </div>
            <div class="col-lg-4" style="font-size:30px;">@Model.DanhGia</div>
            <div class="col-lg-4"></div>
        </div>
        <hr />

        <div class="tieudenoidung">
            <p class="tieude">NỘI DUNG</p>
            <p class="noidung">
                @Model.GioiThieu
            </p>
            <hr>
            <div class="tieudechitiet">
                <p class="tieude">CHI TIẾT</p>
                <p class="chitiet">Thể loại: @Html.Action("Extension_Overall_TenTheLoai", "CitricStore", new { idtheloai = Model.MaTheLoai})</p>
                <p class="chitiet">Nhà phát hành: @Html.Action("Details_TenNPH", "CitricStore", new { idnph = Model.MaNPH })</p>
                <p class="chitiet">Dung lượng: @Model.DungLuong MB</p>
                <p class="chitiet">Ngôn ngữ: @Html.Action("Details_TenNgonNgu", "CitricStore", new { idngonngu = Model.MaNgonNgu })</p>
                <p class="chitiet">Hệ điều hành: @Html.Action("Details_TenHDH", "CitricStore", new { idhdh = Model.MaHDH })</p>
                <p class="chitiet">Ngày cập nhật: @Model.NgayCapNhat</p>
            </div>
        </div>
        <hr>
        <div class="game-list-container">
            <h1 class="game-list-title" style="margin-bottom: -20px;">CÙNG THỂ LOẠI</h1>
            <div class="game-list-wrapper">
                <div class="game-list" id="game-list-scrollbar">
                    @Html.Action("Details_Overall_CungTheLoai", "CitricStore", new { idtheloai = Model.MaTheLoai })
                </div>
            </div>
        </div>

        <div class="game-list-container">
            <h1 class="game-list-title">MỚI</h1>
            <div class="game-list-wrapper">
                <div class="game-list" id="game-list-scrollbar">
                    @Html.Action("Details_Overall_Moi", "CitricStore")
                </div>
            </div>
        </div>
        <div class="game-list-container">
            <h1 class="game-list-title">HOT</h1>
            <div class="game-list-wrapper">
                <div class="game-list" id="game-list-scrollbar">
                    @Html.Action("Details_Overall_TheoDanhGia", "CitricStore")
                </div>
            </div>
        </div>
    </div>
</div>

