<div id="hnc-game-filter">
    <div class="row row-sm" style="align-items: center; margin-left:10px">
        <div class="col-12 col-md-12 col-lg-11 col-xl-11">
            <form class="row">
                <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 filter-row">
                    <label class="control-label">Sắp xếp</label>
                    <select class="form-control filter" id="sortgame" name="sortgamevalue" required="required" data-filter="sortgame">
                        <option value="0">Chọn mục sắp xếp</option>
                        <option value="gamebydate">Game mới nhất</option>
                        <option value="gamebyrate">Game hay nhất</option>
                    </select>
                </div>

                <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 filter-row">
                    <label class="control-label">Dung lượng</label>
                    <select class="form-control filter" id="size" name="sizevalue" required="required" data-filter="size">
                        <option value="0">Chọn dung lượng</option>
                        <option value="10">Dưới 10GB</option>
                        <option value="20">Dưới 20GB</option>
                        <option value="50">Dưới 50GB</option>
                    </select>
                </div>

                <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 filter-row">
                    <label class="control-label">Ngôn ngữ</label>
                    <select class="form-control filter" id="language" name="languagevalue" required="required" data-filter="language">
                        <option value="0">Chọn ngôn ngữ</option>
                        <option value="tiengviet">Tiếng Việt</option>
                        <option value="tienganh">Tiếng Anh</option>
                        <option value="ngonngukhac">Ngôn ngữ khác</option>
                    </select>
                </div>

                <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 filter-row">
                    <label class="control-label">Nền tảng</label>
                    <select class="form-control filter" id="operatingsystem" name="operatingsystemvalue" required="required" data-filter="operatingsystem">
                        <option value="0">Chọn hệ điều hành</option>
                        <option value="windows">Windows</option>
                        <option value="macos">Mac OS X</option>
                        <option value="linux">SteamOS + Linux</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-12 col-lg-1 col-xl-1">
            <button class="btn filter-btn">
                Lọc
            </button>
        </div>
    </div>
</div>
<div class="dexuat-container">
    <div class="container-fluid">
        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="bloggame">
                        <a href="" class="imageblog">

                            <img class="imageblog-width-height" src="~/Images/@game.HinhNen">
                        </a>
                        <div class="bloggame-title h4">
                            <a class="fix-line" href="">@game.TenGame</a>
                        </div>
                        <div class="bloggame-theloai">
                            Thể loại: @Html.Action("TenTheLoai_Bloggame", "CitricStore", new { idtheloai = game.MaTheLoai })
                        </div>
                        <a class="bloggame-download" href="@Url.Action("DetailsGame", "CitricStore", new {id=game.MaGame})" style="text-decoration:none">
                            <div class="bloggame-download-btn">
                                Tải Xuống
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
