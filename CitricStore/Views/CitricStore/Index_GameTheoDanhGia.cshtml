@using CitricStore.Models

@foreach (var game in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="bloggame">
            <div class="imageblog">
                <img class="card-img-top imageblog-width-height" src="~/Images/@game.HinhNen" alt="Card image">
            </div>
            <div class="">
                <div class="bloggame-title h4">
                    <a class="fix-line">@game.TenGame</a>
                </div>
                <div class="bloggame-theloai">
                    Thể loại: @Html.Action("TenTheLoaiGame", "CitricStore", new {idtheloai = game.MaTheLoaiGame })
                </div>
                <a class="bloggame-download" href="@Url.Action("DetailsGame", "CitricStore", new {id=game.MaGame})" style="text-decoration:none">
                    <div class="bloggame-download-btn">
                        Chi Tiết
                    </div>
                </a>
            </div>
        </div>
    </div>
}


