@model IEnumerable<CitricStore.Models.APP>

@{
    ViewBag.Title = "Tổng Hợp App";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">NHẬP DỮ LIỆU PHẦN MỀM (APP)</h2>
    <h3 style="text-align: center; color: red;">TỔNG HỢP</h3>

    <p>
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table-bordered">
        <tr>
            <th>
                Mã App
            </th>
            <th>
                Tên App
            </th>
            <th>
                Giới Thiệu
            </th>
            <th>
                Dung Lượng (MB)
            </th>
            <th>
                Ngôn Ngữ
            </th>
            <th>
                Hệ Điều Hành
            </th>
            <th>
                Link Tải
            </th>
            <th>
                Ngày Nhập
            </th>
            <th>
                Hình Nền (BgApp)
            </th>
            <th>
                Hình Chi Tiết (BgApp1.1)
            </th>
            <th>
                Hình Chi Tiết (BgApp1.2)
            </th>
            <th>
                Hình Chi Tiết (BgApp1.3)
            </th>
            <th>
                Hình Chi Tiết (BgApp1.4)
            </th>
            <th>
                Đánh Giá
            </th>
            <th>
                Nhà Phát Hành
            </th>
            <th>
                Thể Loại
            </th>
            <th>
                Sửa
            </th>
            <th>
                Chi Tiết

            </th>
            <th>
                Xoá
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor((modelItem => item.MaApp))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenApp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiThieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DungLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NGONNGU1.TenNgonNgu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HEDIEUHANH1.TenHDH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkTai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayCapNhat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhNen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DanhGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NHAPHATHANH.TenNPH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THELOAIAPP.TenTheLoai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaApp }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaApp }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "Delete", new { id = item.MaApp }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
</div>