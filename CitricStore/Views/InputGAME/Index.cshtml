@model IEnumerable<CitricStore.Models.GAME>

@{
    ViewBag.Title = "Tổng Hợp Game";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">NHẬP DỮ LIỆU GAME</h2>
    <h3 style="text-align: center; color: red;">TỔNG HỢP GAME</h3>

    <p>
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table-bordered">
        <tr>
            <th>
                Mã Game
            </th>
            <th>
                Tên Game
            </th>
            <th>
                Giới Thiệu
            </th>
            <th>
                Dung Lượng (MB)
            </th>
            <th>
                Ngôn Ngữ
            </th>
            <th>
                Hệ Điều Hành
            </th>
            <th>
                Link Tải
            </th>
            <th>
                Ngày Nhập
            </th>
            <th>
                Hình Nền (BgGame)
            </th>
            <th>
                Hình Chi Tiết (Game1.1)
            </th>
            <th>
                Hình Chi Tiết (Game1.2)
            </th>
            <th>
                Hình Chi Tiết (Game1.3)
            </th>
            <th>
                Hình Chi Tiết (Game1.4)
            </th>
            <th>
                Đánh Giá
            </th>
            <th>
                Nhà Phát Hành
            </th>
            <th>
                Thể Loại
            </th>
            <th>
                Sửa
            </th>
            <th>
                Chi Tiết
            </th>
            <th>
                Xoá
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaGame)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TenGame)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiThieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DungLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NGONNGU.TenNgonNgu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HEDIEUHANH.TenHDH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkTai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayCapNhat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhNen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhCT4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DanhGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NHAPHATHANH.TenNPH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THELOAI.TenTheLoai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaGame }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGame }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "Delete", new { id = item.MaGame }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
    </div>