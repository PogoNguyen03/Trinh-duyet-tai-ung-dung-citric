@model IEnumerable<CitricStore.Models.NHAPHATHANH>

@{
    ViewBag.Title = "Tổng Hợp NPH";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">NHẬP DỮ LIỆU NHÀ PHÁT HÀNH</h2>
    <h3 style="text-align: center; color: red;">TỔNG HỢP NPH</h3>

    <p>
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                Mã NPH
            </th>
            <th>
                Tên NPH
            </th>
            <th>
                Sửa
            </th>
            <th>
                Chi tiết
            </th>
            <th>
                Xoá
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNPH)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TenNPH)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaNPH }, new { @class = "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNPH }, new { @class = "btn btn-danger" })
                    </td>
                    <td>
                        @Html.ActionLink("Xoá", "Delete", new { id = item.MaNPH }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
        }

    </table>
</div>